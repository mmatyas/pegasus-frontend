import QtQuick 2.8

Rectangle {
    property bool highlighted: false
    property bool pressed: false

    width: parent.width * 0.3
    height: width
    anchors.margins: 4

    color: pressed ? "#393": "#3cc"
    radius: width * 0.2
    visible: highlighted || pressed
}
