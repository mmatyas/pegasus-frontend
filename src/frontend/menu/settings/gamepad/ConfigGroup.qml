Column {
    property alias label: groupLabel.text
    property int alignment: Text.AlignLeft

    spacing: vpx(1)

    ConfigGroupLabel {
        id: groupLabel
        anchors.right: alignment === Text.AlignRight ? parent.right : undefined
    }
}
